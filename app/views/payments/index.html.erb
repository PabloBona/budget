  <h2 class="fs-6 log-title py-4 section-title text-center text-white z-1">PAYMENTS</h2>
      <%= link_to root_path do %>
        <box-icon class="arrow-back mx-2" name='arrow-back' color='#fff'></box-icon>
      <% end %>
<div class="bg-grey container-fluid pt-header">
  <div class="row">
    <div class="bg-color col mb-5">
     <h2>Payments for <%= @category.name %></h2>
     <p>Total Amount: <%= @total_amount %></p>
      <% @payments.each do |payment| %>
        <ul class="bg-white border-0 list-unstyled p-3 rounded-2 shadow">
          <li class="dotted">
            <%= payment.name.titleize %>
          </li>
          <hr class="dotted">
          <li>
            Date: <%= payment.created_at.strftime("%Y-%m-%d") %>
          </li>
          <hr class="dotted">
          <li>
              <div class="d-flex justify-content-between">
              <p>TOTAL PAYMENT:</p>
              <p class=""><%=number_to_currency(payment.amount) %></p>
              </div>
           </li>
        </ul>
      <% end %>
 
      <div class="footer-container">
      <div class="text-center">
        <div class="btn-green p-2">
          <%= link_to "Add a New Transaction", new_category_payment_path(@category), class:"border-light btn btn-green w-100" %>
        </div>
      <div>
      <div>
    </div>
  </div>
</div>
