<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <div id="<%= dom_id category %>">
      <p>
        <strong>Name:</strong>
        <%= link_to category.name, category_payments_path(category) %>
      </p>

      <p>
        <strong>Icon:</strong>
        <%= category.icon %>
      </p>

      <p>
        <strong>Total Amount:</strong>
        <%= number_to_currency(category.total_amount) %>
      </p>
      
      <div>
        <%= link_to "Edit this category", edit_category_path(category) %> |
        <%= button_to "Destroy this category", category, method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add a New Category", new_category_path %>
