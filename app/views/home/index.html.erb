<% if user_signed_in? %>
  redirect_to user_path(current_user)
<% else %>

<div class="container-fluid position-fixed">
  <div class="align-items-center d-flex justify-content-center title">
    <div class="row">
      <div class="col text-center">
        <h2 class="snap">Snapscan</h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center user-btn title">
      <%= link_to "LOG IN", new_user_session_path, class: "btn w-100 p-3 rounded-0" %>
      <%= link_to "SIGN UP", new_user_registration_path, class: "btn w-100 p-3 rounded-0" %>
    </div>
  </div>
</div>

<% end %>
